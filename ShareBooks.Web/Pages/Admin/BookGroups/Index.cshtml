@page
@model ShareBooks.Web.Pages.Admin.BookGroups.IndexModel
@{
    ViewData["Title"] = "لیست گروه ها";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>
                لیست گروه ها

            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>


            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <div class="col-md-12 col-sm-12 col-xs-12">
                @if (Model.BookGroups.Count == 0)
                {
                    <div class="alert alert-danger ">
                        رکوردی یافت نشد
                    </div>
                }

                <div id="datatable-checkbox_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                    <div class="row">
                        <div class="col-sm-12">
                            <a href="/Admin/BookGroups/CreateGroup/" class="btn btn-success">افزودن سر گروه جدید</a>

                            <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action dataTable no-footer" role="grid" aria-describedby="datatable-checkbox_info">
                                <thead>
                                    <tr role="row">

                                        <th>عنوان سر گروه</th>
                                        <th>زیر گروه ها</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>

                                <tbody>

                                    @foreach (var groups in Model.BookGroups.Where(g => g.ParentId == null))
                                    {

                                        <tr role="row" class="odd">

                                            <td>@groups.GroupTitle</td>
                                            <td>
                                                @if (groups.BookGroups.Any())
                                                {
                                                    <ul>
                                                        @foreach (var sub in Model.BookGroups.Where(g => g.ParentId == groups.GroupId))
                                                        {
                                                            <li>
                                                                @sub.GroupTitle -    <a href="/Admin/BookGroups/CreateGroup/@sub.GroupId" class="btn btn-info btn-xs">افزودن زیر گروه</a>
                                                                <a href="/Admin/BookGroups/EditGroup/@sub.GroupId" class="btn btn-warning btn-xs">ویرایش</a>

                                                                @if (sub.BookGroups.Any())
                                                                {
                                                                    <ul>
                                                                        @foreach (var secondSub in Model.BookGroups.Where(g => g.ParentId == sub.GroupId))
                                                                        {
                                                                            <li>
                                                                                @secondSub.GroupTitle - <a href="/Admin/BookGroups/EditGroup/@secondSub.GroupId" class="btn btn-dark btn-xs">ویرایش</a>
                                                                            </li>
                                                                        }
                                                                    </ul>
                                                                }
                                                            </li>
                                                        }
                                                    </ul>
                                                }
                                            </td>
                                            <td>
                                                <a href="/Admin/BookGroups/CreateGroup/@groups.GroupId" class="btn btn-info btn-xs">افزودن زیر گروه</a>
                                                <a href="/Admin/BookGroups/EditGroup/@groups.GroupId" class="btn btn-warning btn-xs">ویرایش</a>
                                                <a href="/Admin/BookGroups/DeleteGroup/@groups.GroupId" class="btn btn-danger btn-xs">حذف</a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>

