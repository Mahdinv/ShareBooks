@page
@model ShareBooks.Web.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "مدیریت نقش ها";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>
                لیست نقش ها

            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>


            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <div class="col-md-12 col-sm-12 col-xs-12">
                @if (Model.RolesList.Count == 0)
                {
                    <div class="alert alert-danger ">
                        رکوردی یافت نشد
                    </div>
                }

                <div id="datatable-checkbox_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                    <div class="row">
                        <div class="col-sm-12">
                            <a href="/Admin/Roles/CreateRole/" class="btn btn-success">افزودن نقش جدید</a>
                            @{
                                int rowCount = 1;
                            }
                            <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action dataTable no-footer" role="grid" aria-describedby="datatable-checkbox_info">
                                <thead>
                                    <tr role="row">
                                        <th>ردیف</th>
                                        <th>عنوان نقش</th>
                                        <th>نام نقش</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>

                                <tbody>

                                    @foreach (var role in Model.RolesList)
                                    {

                                        <tr role="row" class="odd">
                                            <td>@rowCount</td>
                                            <td>@role.RoleTitle</td>
                                            <td>@role.RoleName</td>
                                            <td>
                                                <a href="/Admin/Roles/EditRole/@role.RoleId" class="btn btn-warning btn-xs">ویرایش</a>
                                                <a href="/Admin/Roles/DeleteRole/@role.RoleId" class="btn btn-danger btn-xs">حذف</a>
                                            </td>
                                        </tr>
                                        rowCount++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>


