@page
@model ShareBooks.Web.Pages.Admin.Publishers.IndexModel
@{
    ViewData["Title"] = "مدیریت ناشران";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>
                لیست ناشران

            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>


            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <div class="col-md-12 col-sm-12 col-xs-12">
                @if (Model.Publishers.Count == 0)
                {
                    <div class="alert alert-danger ">
                        رکوردی یافت نشد
                    </div>
                }

                <div id="datatable-checkbox_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                    <div class="row">
                        <div class="col-sm-12">
                            <a href="/Admin/Publishers/CreatePublisher/" class="btn btn-success">افزودن ناشر جدید</a>
                            @{
                                int rowCount = 1;
                            }
                            <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action dataTable no-footer" role="grid" aria-describedby="datatable-checkbox_info">
                                <thead>
                                    <tr role="row">
                                        <th>ردیف</th>
                                        <th>عکس ناشر</th>
                                        <th>عنوان ناشر </th>
                                        <th>تعداد کتاب‌ها</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>

                                <tbody>

                                    @foreach (var item in Model.Publishers)
                                    {

                                        <tr role="row" class="odd">
                                            <td>@rowCount</td>
                                            <td><img src="/images/publisher/@item.PublisherImageName" height="80" /></td>
                                            <td>@item.PublisherTitle</td>
                                            <td>@item.Books.Count کتاب</td>
                                            <td>
                                                <a href="/Admin/Publishers/EditPublisher/@item.PublisherId" class="btn btn-warning btn-xs">ویرایش</a>
                                                <a href="/Admin/Publishers/DeletePublisher/@item.PublisherId" class="btn btn-danger btn-xs">حذف</a>
                                            </td>
                                        </tr>
                                        rowCount++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>

