@model ShareBooks.Core.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "ثبت نام";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section-headline-wrap">
    <div class="section-headline">
        <h2> ثبت نام</h2>
        <p><a href="/">صفحه اصلی</a><span class="separator">/</span><span class="current-section">ثبت نام</span></p>
    </div>
</div>

<div class="section-wrap">
    <div class="section demo">

        <div class="form-popup ">

            <!-- FORM POPUP HEADLINE -->
            <div class="form-popup-headline primary">
                <h2>فرم ثبت نام را کامل کنید</h2>

            </div>
            <!-- /FORM POPUP HEADLINE -->
            <!-- FORM POPUP CONTENT -->
            <div class="form-popup-content">
                <form asp-action="Register" method="post">
                    <label>نام</label>
                    <input type="text" asp-for="FirstName" placeholder="نام خود را وارد کنید">
                    <span asp-validation-for="FirstName"></span>

                    <label>نام خانوادگی</label>
                    <input type="text" asp-for="LastName" placeholder="نام خانوادگی خود را وارد کنید">
                    <span asp-validation-for="LastName"></span>

                    <label>شماره موبایل</label>
                    <input type="text" asp-for="Mobile" placeholder="شماره موبایل خود را وارد کنید">
                    <span asp-validation-for="Mobile"></span>

                    <label>ایمیل</label>
                    <input type="text" asp-for="Email" placeholder="ایمیل خود را وارد کنید">
                    <span asp-validation-for="Email"></span>

                    <label>کلمه عبور</label>
                    <input type="text" asp-for="Password" placeholder="کلمه عبور خود را وارد کنید">
                    <span asp-validation-for="Password"></span>

                    <label>تکرار کلمه عبور</label>
                    <input type="text" asp-for="RePassword" placeholder="تکرار کلمه عبور خود را وارد کنید">
                    <span asp-validation-for="RePassword"></span>

                    <input type="submit" class="button mid dark" value="ثبت نام" />


                </form>
            </div>
            <!-- /FORM POPUP CONTENT -->
        </div>

        <div class="clearfix"></div>
    </div>
</div>


